{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "bundler",

    "customConditions": ["react-native"],
    "types": ["nativewind/types"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@app/*": ["app/*"]
    }
  }
}
